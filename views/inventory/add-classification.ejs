<div class="inventory-page-container">
    <div class="inventory-form-container">
      <%- messages() %>
      <h1>Add New Classification</h1>
      <% if (locals.errors) { %>
        <ul class="error-container">
          <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      <% } %>
      <form action="/inv/add-classification" method="post">
        <label for="classification_name">Classification Name (no spaces or special characters):</label>
        <input type="text" id="classification_name" name="classification_name" required pattern="^[a-zA-Z0-9]+$">
        <button type="submit">Add Classification</button>
      </form>
    </div>
  </div>